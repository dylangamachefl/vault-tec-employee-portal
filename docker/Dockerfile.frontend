FROM python:3.11-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Install Streamlit and dependencies
RUN uv pip install --system --no-cache \
    streamlit pydantic-settings requests

# Copy source
COPY src/ ./src/

EXPOSE 8501

CMD ["streamlit", "run", "src/ui/app.py", "--server.address", "0.0.0.0", "--server.port", "8501"]
